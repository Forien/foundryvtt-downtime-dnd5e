<!-- SHOW FOR SKILL -->
<div class="form-group">
  <label for="skill">{{ localize 'downtime-dnd5e.SelectASkill' }}</label>
  <div class="form-fields">
    <select name="skill" id="skillInput"">
      {{#each dropdownOptions.skills as |option oid| }}
        <option value="{{option.value}}" {{#if (eq ../item.skill option.value)}} selected {{/if}}>{{option.label}}</option>
      {{/each}}
    </select>
  </div>
</div>

<!-- SHOW FOR ABILITY OR SKILL OR TOOL -->
<div class="form-group">
  <label for="dc">{{ localize 'downtime-dnd5e.CheckDC' }}</label>
  <div class="form-fields">
    <input type="number" name="dc" id="dcInput" value="{{item.dc}}">
  </div>
</div>

<div class="form-group">
  {{#if item.dc}}
  <label for="completionAt">{{ localize 'downtime-dnd5e.SuccessesRequired' }}</label>
  {{else}}
  <label for="completionAt">{{ localize 'downtime-dnd5e.CompletionTarget' }}</label>
  {{/if}}
  <div class="form-fields">
    <input type="number" name="completionAt" id="completionAtInput" value="{{item.completionAt}}" min="0">
    <label class="help">
      <i class="fas fa-question-circle"></i>
      {{#if item.dc}}
      <span class="tooltip">{{ localize 'downtime-dnd5e.SuccessesRequiredInputHelpText' }}</span>
      {{else}}
      <span class="tooltip">{{ localize 'downtime-dnd5e.CompletionTargetInputHelpText' }}</span>
      {{/if}}
    </label>
  </div>
</div>
