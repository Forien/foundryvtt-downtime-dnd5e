<!-- SHOW FOR MACRO -->
<div class="form-group">
  <label for="macroName">{{ localize 'downtime-5e.MacroName' }}</label>
  <div class="form-fields">
    <input type="text" name="macroName" id="macroNameInput" value="{{item.macroName}}">
    <label class="help">
      <i class="fas fa-question-circle"></i>
      <span class="tooltip">{{ localize 'downtime-5e.MacroNameInputHelpText' }}</span>
    </label>
  </div>
</div>

<div class="form-group">
  <label for="completionAt">{{ localize 'downtime-5e.CompletionTarget' }}</label>
  <div class="form-fields">
    <input type="number" name="completionAt" id="completionAtInput" value="{{item.completionAt}}" min="0">
  </div>
</div>
