<div class="tab downtime-5e-training" data-group="primary" data-tab="training">

  <!-- Tab Controls -->
  {{#if showToUserEditMode}}
  <div class="downtime-5e-training-controls">
    <div class="downtime-5e-training-export" title="{{ localize 'downtime-5e.ExportTrackedItemsTooltip' }}">
      <i class="fas fa-file-import"></i> {{ localize 'downtime-5e.ExportTrackedItems' }}
    </div>
    {{#if showImportButton}}
    <div class="downtime-5e-training-import" title="{{ localize 'downtime-5e.ImportTrackedItemsTooltip' }}">
      <i class="fas fa-file-export"></i> {{ localize 'downtime-5e.ImportTrackedItems' }}
    </div>
    {{/if}}
    <div class="downtime-5e-training-audit push-left" title="{{ localize 'downtime-5e.ReviewChanges' }}">
      <i class="fas fa-clipboard"></i> {{ localize 'downtime-5e.ChangeLog' }}
    </div>
    <div class="downtime-5e-training-new-category" title="{{ localize 'downtime-5e.CreateNewCategory' }}">
      <i class="fas fa-list"></i> {{ localize 'downtime-5e.AddCategory' }}
    </div>
    <div class="downtime-5e-training-add" title="{{ localize 'downtime-5e.CreateNewItem' }}">
      <i class="fas fa-plus"></i> {{ localize 'downtime-5e.AddItem' }}
    </div>
  </div>
  {{/if}}

  <!-- Items List -->
  <ol class="items-list">

    <!-- Uncategorized -->
    <li class="items-header flexrow">
      <div class="item-name flexrow"><h3>{{ localize 'downtime-5e.Uncategorized' }}</h3></div>
      <div class="activity-type">{{localize "downtime-5e.CheckTypeColumnHeader"}}</div>
      <div class="activity-override">{{localize "downtime-5e.ProgressColumnHeader"}}</div>
      <div class="activity-progress"></div>
      <div class="downtime-5e-item-controls flexrow"></div>
    </li>
    <ol class="item-list inventory-list">
      {{#each (5e-training-isUncategorized actor) as |training tid| }}
        <li class="item flexrow">
          <div class="item-name flexrow rollable">
            <div class="{{5e-training-trainingRollBtnClass training}}"
                 id="downtime-5e-roll-{{training.id}}"
                 title="{{5e-training-trainingRollBtnTooltip training}}"
                 style="background-image: url('{{training.img}}')">
              <div class="checkmark">  <i class="fas fa-check"></i></div>
            </div>
            <h4 class="downtime-5e-training-toggle-desc" id="downtime-5e-toggle-desc-{{training.id}}" title="{{ localize 'downtime-5e.ToggleInfo' }}">{{training.name}}</h4>
          </div>
          <div class="activity-type-row">
            {{5e-training-progressionStyle training ../actor}}
          </div>
          <div class="activity-override-row">
            {{#if ../showToUserEditMode}}
            <input type="text" class="item-control downtime-5e-training-override" id="downtime-5e-override-{{training.id}}" title="{{ localize 'downtime-5e.AdjustProgressValue' }}" value="{{training.progress}}"/>
            {{else}}
            <input type="text" readonly class="item-control downtime-5e-training-override" id="downtime-5e-override-{{training.id}}" title="{{ localize 'downtime-5e.AdjustProgressValue' }}" value="{{training.progress}}"/>
            {{/if}}
            <span> / {{training.completionAt}}</span>
          </div>
          <div class="activity-progress-row">
            <div class="progress-bar">
              <div class="downtime-5e-training-completion" style="width:{{5e-training-trainingCompletion training}}%;">
                <span>{{5e-training-trainingCompletion training}}%</span>
              </div>
            </div>
          </div>
          {{#if ../showToUserEditMode}}
          <div class="downtime-5e-item-row-controls">
            <a class="item-control downtime-5e-training-edit" id="downtime-5e-edit-{{training.id}}" title="{{ localize 'downtime-5e.EditItem' }}"><i class="fas fa-edit"></i></a>
            <a class="item-control downtime-5e-training-delete" id="downtime-5e-delete-{{training.id}}" title="{{ localize 'downtime-5e.DeleteItem' }}"><i class="fas fa-trash"></i></a>
          </div>
          {{/if}}
        </li>
      {{/each}}
    </ol>

    <!-- Categories -->
    {{#each actor.flags.5e-training.categories as |category cid| }}
      <li class="items-header flexrow" title="{{ category.description }}">
        <div class="item-name flexrow"><h3>{{ category.name }}</h3></div>
        <div class="activity-type">{{localize "downtime-5e.CheckTypeColumnHeader"}}</div>
        <div class="activity-override">{{localize "downtime-5e.ProgressColumnHeader"}}</div>
        <div class="activity-progress"></div>
        {{#if ../showToUserEditMode}}
        <div class="downtime-5e-item-controls flexrow">
          <a class="item-control downtime-5e-training-edit-category" id="downtime-5e-edit-category-{{category.id}}" title="{{ localize 'downtime-5e.EditCategory' }}"><i class="fas fa-edit"></i></a>
          <a class="item-control downtime-5e-training-delete-category" id="downtime-5e-delete-category-{{category.id}}" title="{{ localize 'downtime-5e.DeleteCategory' }}"><i class="fas fa-trash"></i></a>
        </div>
        {{/if}}
      </li>
      <ol class="item-list inventory-list">
        {{#each (5e-training-isInCategory ../actor category) as |training tid| }}
          <li class="item flexrow">
            <div class="item-name flexrow rollable">
              <div class="{{5e-training-trainingRollBtnClass training}}"
                   id="downtime-5e-roll-{{training.id}}"
                   title="{{5e-training-trainingRollBtnTooltip training}}"
                   style="background-image: url('{{training.img}}')">
                <div class="checkmark">  <i class="fas fa-check"></i></div>
              </div>
              <h4 class="downtime-5e-training-toggle-desc" id="downtime-5e-toggle-desc-{{training.id}}" title="{{ localize 'downtime-5e.ToggleInfo' }}">{{training.name}}</h4>
            </div>
            <div class="activity-type-row">
              {{5e-training-progressionStyle training ../../actor}}
            </div>
            <div class="activity-override-row">
              {{#if ../../showToUserEditMode}}
              <input type="text" class="item-control downtime-5e-training-override" id="downtime-5e-override-{{training.id}}" title="{{ localize 'downtime-5e.AdjustProgressValue' }}" value="{{training.progress}}"/>
              {{else}}
              <input type="text" readonly class="item-control downtime-5e-training-override" id="downtime-5e-override-{{training.id}}" title="{{ localize 'downtime-5e.AdjustProgressValue' }}" value="{{training.progress}}"/>
              {{/if}}
              <span> / {{training.completionAt}}</span>
            </div>
            <div class="activity-progress-row">
              <div class="progress-bar">
                <div class="downtime-5e-training-completion" style="width:{{5e-training-trainingCompletion training}}%;">
                  <span>{{5e-training-trainingCompletion training}}%</span>
                </div>
              </div>
            </div>
            {{#if ../../showToUserEditMode}}
            <div class="downtime-5e-item-row-controls">
              <a class="item-control downtime-5e-training-edit" id="downtime-5e-edit-{{training.id}}" title="{{ localize 'downtime-5e.EditItem' }}"><i class="fas fa-edit"></i></a>
              <a class="item-control downtime-5e-training-delete" id="downtime-5e-delete-{{training.id}}" title="{{ localize 'downtime-5e.DeleteItem' }}"><i class="fas fa-trash"></i></a>
            </div>
            {{/if}}
          </li>
        {{/each}}
      </ol>
    {{/each}}
  </ol>
</div>
