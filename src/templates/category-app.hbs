<form class="downtime-5e-category-app">
  <input type="hidden" name="actorId" value="{{actor.id}}"/>
  <input type="hidden" name="categoryId" value="{{category.id}}"/>

  <div class="form-group">
    <label for="name">{{ localize "downtime-5e.Name" }}:</label>
    <div class="form-fields">
      <input type="text" name="nameInput" id="nameInput" value="{{category.name}}"/>
    </div>
  </div>

  <div class="form-group">
    <label for="description">{{ localize "downtime-5e.Description" }}:</label>
    <div class="form-fields">
      <textarea name="descriptionInput" id="descriptionInput">{{category.description}}</textarea>
      <!--
      <div class="editor-box">
        {{editor content=category.description target="descriptionInput" button=true editable=editable inline_styles=false owner=owner}}
      </div>
      -->
    </div>
  </div>

  <footer>
    <button id="downtime-5e-create-category"><i class='fas fa-check'></i> {{ localize "downtime-5e.SaveCategory" }}</button>
  </footer>

</form>
